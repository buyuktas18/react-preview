{
  "compilerOptions": {
    "target": "esnext", // Use ESNext for modern syntax
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Keep these libraries
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext", // Use ESNext for module system
    "moduleResolution": "node", // Use Node.js resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // React JSX syntax for React 17+
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
, "next.config.js"  ], // Ensure all relevant files are included
  "exclude": [
    "node_modules"
  ] // Exclude unnecessary files
}
