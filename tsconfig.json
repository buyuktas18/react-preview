{
  "compilerOptions": {
    "target": "esnext", // Use ESNext for modern syntax
    "lib": ["dom", "dom.iterable", "esnext"], // Keep these libraries
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext", // Use ESNext for module system
    "moduleResolution": "node", // Use Node.js resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // React JSX syntax for React 17+
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"], // Ensure all relevant files are included
  "exclude": ["node_modules"] // Exclude unnecessary files
}
